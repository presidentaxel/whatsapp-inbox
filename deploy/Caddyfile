{$DOMAIN} {
  encode zstd gzip

  # API routes - must be before frontend catch-all
  # Uses backend:8000 (Docker service) by default, or BACKEND_URL if set
  @api path /api*
  handle @api {
    uri strip_prefix /api
    reverse_proxy {$BACKEND_URL:backend:8000} {
      header_up Host {upstream_hostport}
      header_up X-Forwarded-Proto {scheme}
    }
  }

  # Webhook routes - must be before frontend catch-all
  # CRITICAL: Webhooks must work!
  # Uses backend:8000 (Docker service name) by default, or BACKEND_URL if set
  @webhook path /webhook*
  handle @webhook {
    reverse_proxy {$BACKEND_URL:backend:8000} {
      # Preserve headers for webhook verification
      header_up Host {upstream_hostport}
      header_up X-Forwarded-Proto {scheme}
      header_up X-Forwarded-For {remote_host}
      header_up X-Real-IP {remote}
      # Important: Don't strip any headers, Meta needs them
    }
  }

  # Diagnostics routes - must be before frontend catch-all
  @diagnostics path /_diagnostics*
  handle @diagnostics {
    reverse_proxy {$BACKEND_URL:backend:8000} {
      header_up Host {upstream_hostport}
    }
  }

  # Health check and metrics - must be before frontend catch-all
  @health path /health* /healthz /metrics
  handle @health {
    reverse_proxy {$BACKEND_URL:backend:8000} {
      header_up Host {upstream_hostport}
    }
  }

  # Grafana - must be before frontend catch-all
  @grafanaExact path /grafana
  handle @grafanaExact {
    redir /grafana/ permanent
  }

  @grafana path /grafana/*
  handle @grafana {
    reverse_proxy grafana:3000 {
      header_up X-Forwarded-Proto {scheme}
      header_up X-Forwarded-Host {host}
      header_up X-Forwarded-Prefix /grafana
    }
  }

  # Frontend SPA - catch-all for everything else
  @htmlEntry {
    path /
    path /index.html
  }

  header @htmlEntry {
    Cache-Control "no-store, no-cache, must-revalidate"
    Pragma "no-cache"
  }

  # Configure MIME types for JavaScript modules before proxying
  # Critical: .mjs files must be served with application/javascript MIME type
  @mjs path_regexp \.mjs$
  handle @mjs {
    header Content-Type application/javascript
    reverse_proxy frontend:80
  }

  handle {
    reverse_proxy frontend:80
  }

  header {
    Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
    X-Content-Type-Options "nosniff"
    X-Frame-Options "DENY"
    Referrer-Policy "strict-origin-when-cross-origin"
    Permissions-Policy "geolocation=(), microphone=()"
  }

  tls {$EMAIL}
}

